{
  "name": "linter-ktlint",
  "main": "./lib/linter-ktlint.js",
  "version": "0.2.0",
  "private": true,
  "description": "Lint Kotlin files using ktlint",
  "keywords": [
    "lint",
    "ktlint",
    "kotlin"
  ],
  "repository": "https://github.com/kkopper/atom-linter-ktlint",
  "license": "MIT",
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "ktlint",
      "title": "Executable path",
      "description": "Please specify where your `ktlint` executable is located."
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose mode",
      "description": "Run ktlint in verbose mode."
    },
    "experimental": {
      "type": "boolean",
      "default": false,
      "title": "Enable experimental rulesets",
      "description": "Run ktlint with experimental rulesets enabled."
    }
  },
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "7.2.2"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.28.0",
    "jasmine-fix": "1.3.1"
  },
  "package-deps": [
    "linter:2.0.0",
    "language-kotlin"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "atom": true
    }
  }
}
